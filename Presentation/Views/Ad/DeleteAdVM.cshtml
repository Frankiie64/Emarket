@using Emarket.Core.Application.ViewModels.Ad;
@model SaveAdsVM;
@{
    ViewData["Title"] = "Eliminar anuncion";

}
<div class="container-fluid">
    <div class="card w-50 mx-auto mt-5">
        <div class="card-header bg-info ">
            <h5 class="card-title fs-5 text-dark">Estas seguro que deseas eliminar el producto @Model.Name ?</h5>
        </div>
        <div class="card-body mx-auto">
            <form method="post" asp-controller="Ad" asp-action="DeleteAdVMPost" class="text-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger mx-auto">Eliminar</button>
                <a asp-controller="Ad" asp-action="Index" class="btn btn-warning mx-auto">Cancelar</a>
            </form>
        </div>
    </div>
    <div class="card mt-5" style="max-width: 1540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://i.pinimg.com/474x/7f/c5/39/7fc5395c6721d2d1e047804e2bf89e04.jpg" class="img-fluid" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="https://i.pinimg.com/474x/7f/c5/39/7fc5395c6721d2d1e047804e2bf89e04.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="https://i.pinimg.com/474x/7f/c5/39/7fc5395c6721d2d1e047804e2bf89e04.jpg" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
            </div>
        </div>
    </div>
</div>